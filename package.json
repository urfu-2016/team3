{
  "name": "photo-quest",
  "description": "Photo Quest",
  "version": "1.0.0",
  "license": "MIT",
  "author": "team3",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node .",
    "build": "webpack",

    "dev": "npm-run-all --parallel dev:*",
    "dev:watch": "webpack --progress --color --watch",
    "dev:server": "cross-env NODE_ENV=dev nodemon .",

    "lint": "npm-run-all lint:*",
    "lint:stylus": "stylint ./views",
    "lint:js": "eslint . --fix",

    "clean": "npm-run-all clean:*",
    "clean:public": "rimraf public",
    "clean:modules": "rimraf node_modules",

    "deploy:surge": "npm run build && surge --project ./public --domain team3.surge.sh"
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.2",
    "hbs": "^4.0.1",
    "hbs-utils": "0.0.4",
    "mongoose": "^4.8.6",
    "cross-env": "^3.2.3",
    "morgan": "^1.8.1"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-loader": "^6.4.0",
    "babel-preset-es2015": "^6.22.0",
    "css-loader": "^0.27.1",
    "eslint": "^3.17.1",
    "eslint-config-xo": "^0.17.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "postcss-loader": "^1.3.3",
    "rimraf": "^2.6.1",
    "style-loader": "^0.13.2",
    "stylint": "^1.5.9",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "surge": "^0.19.0",
    "webpack": "^2.2.1"
  }
}

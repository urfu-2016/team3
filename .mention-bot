    "message": "Спасибо большое, @pullRequester! @reviewers, пожалуйста, сделайте ревью кода.",
    // custom message using @pullRequester and @reviewers
    "alwaysNotifyForPaths": [], // Users will always be mentioned based on file glob
    "fallbackNotifyForPaths": [
        {
            "name": "Gebon",
            "files": ["**/*", "*.*"],
            "skipTeamPrs": false
        },

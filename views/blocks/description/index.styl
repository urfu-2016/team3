.description {
  background: $projectBg;
  color: #fff;
  padding: 5px;
  opacity: .8;
  overflow: hidden;

  &__columnizer {
    display: flex;
    flex-flow: row wrap;
    margin-bottom: 10px;
  }

  &__text,
  &__author,
  &__location {
    margin: 0;
  }

  &__left-column,
  &__right-column {
    width: 50%;
  }

  &__header {
    font-size: 1.3em;
  }

  &__text {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    margin-bottom: 20px;
  }
}

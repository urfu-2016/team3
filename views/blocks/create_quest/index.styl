.create-quest
  width 100%
  height 500px
  position relative

  &__name,
  &__description
    width calc(100% - 20px)
    resize none
    display block
    margin-bottom 10px
    padding 5px 10px
    border 0

  &__description
    height 50px

  &__submit
    position absolute
    bottom 0
    right 0
    border 0
    background #fff
    padding 5px 10px

  &__add-card-form-section
    width 100%
    position absolute
    top 150px

@import "../../blocks/add_card_form/index.styl"

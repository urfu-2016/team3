<div class="create-quest">
    <h2 class="create-quest__title">Шаг 1: создание квеста</h2>
    <form id="create-quest-form" class="create-quest__form" method="post" action="{{urlsQuestsRoot}}">
        {{{csrfHiddenInput}}}
        {{> edit_text/index _id='name' _name='name' _label='inbox' _type='text' _placeholder='Название квеста'
            _required=true}}
        {{> textarea/index _id='description'
            _name='description' _label='border_color' _placeholder='Описание квеста' _rows='7' _required=true}}
        <div class="create-quest__bottom-section">
            {{{ captcha 'create-quest-form' }}}
            <div class="create-quest__button">{{> button/index _text='Создать'}}</div>
        </div>
    </form>
</div>

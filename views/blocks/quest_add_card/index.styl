$height = 300px

.add-card-form
  width 100%
  display flex
  justify-content space-between
  flex-direction column

  @media (min-width: 560px)
    flex-wrap wrap
    height $height

  &__title
    white-space nowrap
    box-sizing border-box
    margin-bottom 5px
    width 100%
    overflow hidden
    padding 0 20px
    order 0
    text-overflow ellipsis

    @media (min-width: 560px)
      width 55%

  &__input-section
    box-sizing border-box
    display flex
    height $height - 55px
    flex-direction column
    width 100%
    padding 0 20px 10px
    order 2

    @media (min-width: 560px)
      width 55%
      order 1

  &__description
    box-sizing border-box
    display block
    color $color-text-primary
    border-radius 4px
    font-size 13px
    padding 1em 2em
    height 7em
    font-family inherit
    width 100%
    resize none
    border solid 1px rgba(255, 255, 255, .3)
    background transparent

    &:focus
      outline 0

  &__file-section
    box-sizing border-box
    height $height
    position relative
    width calc(100% - 40px)
    order 1
    margin 20px

    @media (min-width: 560px)
      margin 0
      width 45%
      order 2

  &__file-upload
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    cursor pointer
    background #7c4dff

  &__plus
    text-align center
    line-height 100px
    font-size 80px
    position absolute
    width 100px
    height 100px
    border-radius 50%
    border solid 5px #fff
    top calc(50% - 50px)
    left calc(50% - 50px)
    animation pulse 1.7s 0

  &__file
    display none

  &__image
    position absolute
    width 100%
    height 100%
    bottom 0
    object-fit cover

  &__close
    position absolute
    right 0
    bottom 0

  &__button
    align-self center

    @media(min-width:560px)
      align-self flex-start

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  20% {
    transform: scale(1.2);
  }
  40% {
    transform: scale(1.0);
  }
  60% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

@import '../../blocks/edit_text'
@import '../../blocks/textarea'
@import '../../blocks/button'

<form class="login-form" action="{{ __url }}" method="post">
    <div class="login-form__heading">
        <h1 class="login-form__main-header">Sign in</h1>
        <h2 class="login-form__subheader">Welcome back! Nice to see you</h2>
    </div>

    <div class="login-form__input-group login-form__email">
        <label class="login-form__icon login-form__icon-email" for="email"></label>
        <input class="login-form__input login-form__email-input" type="email" name="email" id="email"
               placeholder="email@example.com">
    </div>

    <div class="login-form__input-group login-form__password">
        <label class="login-form__icon login-form__icon-password" for="password"></label>
        <input class="login-form__input login-form__password-input" type="password" name="password"
               id="password" placeholder="Password">
    </div>

    <input class="login-form__submit" type="submit" value="Login">
</form>


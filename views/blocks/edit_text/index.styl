.edit-text
  display flex
  border-bottom 2px solid $color-text-secondary
  font-size 1.5rem
  margin 10px 0

  &__icon
    color $color-text-secondary

  &__input
    min-width 200px
    border 0
    background transparent
    color #fff
    padding 0 10px
    font-size 1rem

    &:focus
      outline 0

.quest-description
  box-shadow $box-shadow
  position relative

  &__background
    position relative
    width 100%
    height 100%
    bottom 0
    object-fit cover

    @media (min-width: 560px)
      width 55%
      position absolute

  &__description
    min-width 300px
    width 100%
    background $primary-dark
    color $color-text-primary
    height 100%
    margin 0 0 0 auto
    display flex
    flex-direction column
    position relative

    @media (max-width: 560px)
      padding-top 20px

    @media (min-width: 560px)
      width 45%
      padding-bottom 20px

  &__buttons-section
    right 0
    position absolute
    display flex

    @media (max-width: 560px)
      top 0
      transform translateY(-50%)

    @media (min-width: 560px)
      bottom 0
      transform translateY(50%)

  &__subscribe
  &__remove
    text-decoration none



@import '../description'
@import '../floating_button'

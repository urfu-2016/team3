<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{ staticBasePath }}/authorization.bundle.css">
</head>
<body>
    {{> header/index _title=title _user=user }}
    <main class="main authorization">
        {{> photocards/index _photos=photos}}
        <section class="authorization__container">
            <form id="authorization-form" class="authorization__form" action="{{urlsUsersLogin}}" method="post">
                {{{csrfHiddenInput}}}
                <h2 class="authorization__title">Вход</h2>
                {{#if error}}
                    <h3 class="authorization__title_error">{{error}}</h3>
                {{/if}}
                {{#if message}}
                    <h3 class="authorization__title_message">{{message}}</h3>
                {{/if}}
                {{> edit_text/index _id='email' _name='email' _label='email' _type='email' _placeholder='E-mail'
                    _required=true}}
                {{> edit_text/index _id='password' _name='password' _label='vpn_key' _type='password' _placeholder='Пароль'
                    _required=true}}
                <div class="authorization__submit">
                    <div class="authorization__social">
                        <a href="{{urlsUsersLoginVK}}" class="authorization__social-vk" title="Вконтакте"></a>
                        <a href="{{urlsUsersLoginTwitter}}" class="authorization__social-twitter" title="Twitter"></a>
                    </div>
                    {{> button/index _text='Вход' _id='authorization__submit'}}
                </div>
            </form>
        </section>
    </main>
    <footer class="footer">
        <span class="footer__copyright">&copy; Лавразия, 2017</span>
    </footer>
    <script src="{{ staticBasePath }}/authorization.bundle.js" async="async"></script>
</body>
</html>
